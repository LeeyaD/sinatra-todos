<ul id="lists">
  <% @lists.each_with_index do |list, index| %>
    <li id="todos" class="<%= list_class(list) %>">
      <a href="/lists/<%= index %>">
        <h2><%= list[:name] %></h2>
        <p><%= "#{todos_remaining(list)} / #{total_todos(list)}" %></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a href="/lists/new" class="add">New List</a>
<% end %>